<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:pages="clr-namespace:TimeTracker.Pages"
             x:Class="TimeTracker.Pages.DashboardPage">
    <TabbedPage.Children>
        <NavigationPage Title="Time" />
        <x:Arguments>
            <pages:TimeClockPage BindingContext="{Binding TimeClockPageModel}" />
        </x:Arguments>
        <NavigationPage />
        <x:Arguments>
            <pages:SummaryPage Title="Summary" BindingContext="{Binding SummaryPageModel}" />
        </x:Arguments>
        <NavigationPage />
        <x:Arguments>
            <pages:ProfilePage Title="Profile" BindingContext="{Binding ProfilePageModel}" />
        </x:Arguments>
        <NavigationPage />
        <x:Arguments>
            <pages:SettingsPage Title="Settings" BindingContext="{Binding SettingsPageModel}"/>
        </x:Arguments>
    </TabbedPage.Children>
</TabbedPage>